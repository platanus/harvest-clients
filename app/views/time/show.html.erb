<% if @error_message %>
  <p><%= @error_message %>
<% else %>
  <h1 class="my-4 text-3xl text-center"><%= @title%></h1>

  <table class="w-5/6 m-5 mx-auto text-gray-800 bg-gray-200 rounded-t-lg">
    <tr class="text-left border-b-2 border-gray-300">
      <th class="px-4 py-3 text-center">Mes</th>
      <th class="px-4 py-3 text-center">Horas</th>
    </tr>
    <% @hours_by_month.each do |month, hours|%>
      <tr class="bg-gray-100 border-b border-gray-200">
        <td class="px-4 py-3 text-center"><%= month %></td>
        <td class="px-4 py-3 text-center"><%= hours.round(1) %></td>
      </tr>
    <% end %>
  </table>
<% end %>
